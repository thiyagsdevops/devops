version: '3'

services:
  
  cadvisor:
    image: google/cadvisor:latest
    restart: always
    ports:
      - "8086:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk/:/dev/disk:ro
    dns:
      - {{ ipaddress }}
